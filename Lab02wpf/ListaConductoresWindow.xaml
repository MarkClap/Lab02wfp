<Window x:Class="Lab02wpf.ListaConductoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Conductores" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Conductores registrados"/>
            <ListBox x:Name="lstConductores" Height="150" Margin="5"/>
            <Button Content="Volver al Menú" Margin="5" Click="BtnVolver_Click"/>
        </StackPanel>
    </Grid>
</Window>
