<Window x:Class="Lab02wpf.ReportesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reportes" Height="558" Width="854">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="416*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <Label Content="Fecha Inicio"/>
                <DatePicker x:Name="dpFechaInicio"/>
            </StackPanel>

            <StackPanel Margin="5">
                <Label Content="Fecha Fin"/>
                <DatePicker x:Name="dpFechaFin"/>
            </StackPanel>

            <StackPanel Margin="5">
                <Label Content="Placa"/>
                <TextBox x:Name="txtPlaca" Width="100"/>
            </StackPanel>

            <StackPanel Margin="5">
                <Label Content="Conductor"/>
                <TextBox x:Name="txtConductor" Width="150"/>
            </StackPanel>

            <StackPanel Margin="5">
                <Label Content="Producto"/>
                <TextBox x:Name="txtProducto" Width="150"/>
            </StackPanel>

            <Button Content="Buscar" Width="80" Margin="10 20 0 0" Click="BtnBuscar_Click"/>
        </StackPanel>

        <!-- Listado -->
        <DataGrid x:Name="dgReportes" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" Height="398" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="100"/>
                <DataGridTextColumn Header="Placa" Binding="{Binding Placa}" Width="100"/>
                <DataGridTextColumn Header="Turno" Binding="{Binding Turno}" Width="80"/>
                <DataGridTextColumn Header="Conductor" Binding="{Binding Conductor}" Width="150"/>
                <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="150"/>
                <DataGridTextColumn Header="Peso" Binding="{Binding Peso}" Width="80"/>
                <DataGridTextColumn Header="Transporte" Binding="{Binding Transporte}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botón volver -->
        <Button Content="Volver al Menú" Grid.Row="1" Width="120" Height="30" HorizontalAlignment="Left" Click="BtnVolver_Click" Margin="0,374,0,-10" Grid.RowSpan="2"/>
    </Grid>
</Window>
